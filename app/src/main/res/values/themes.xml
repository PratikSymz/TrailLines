<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MAD_Team4_FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hike_green</item>
        <item name="colorPrimaryVariant">@color/hike_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hike_accent</item>
        <item name="colorSecondaryVariant">@color/hike_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="image_rounded_corners">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="image_circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="tab_layout_text_style" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="character_count_helper_style">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>